{
  "name": "Easy Copy for Pivotal Tracker",
  "manifest_version": 2,
  "version": "0.2.4",
  "description": "Copy the story ID, Name, Link (and More) fast and easy with a single click on the story",
  "page_action": {
    "default_icon": "img/icon128.png",
    "default_title": "Pivotal Tracker Easy Copy Ex"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "https://www.pivotaltracker.com/*",
        "http://www.pivotaltracker.com/*"
      ],
      "js" : ["js/jquery-1.9.1.min.js", "js/contentscript.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://www.pivotaltracker.com/*",
    "http://www.pivotaltracker.com/*"
  ],
  "background": {
    "page" : "background.html"
  }
}
